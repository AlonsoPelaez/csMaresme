<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardComentario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#377ec6"
    app:cardCornerRadius="12dp">
    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageUser"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/botonredondo" />

                <TextView
                    android:id="@+id/cvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="18dp"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:text="nombre anonimo generado" />
            </LinearLayout>

            <TextView
                android:id="@+id/cvTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:textSize="17dp"
                android:textAlignment="center"
                android:text="Titulo" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cvContenido"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="contenido" />

            <TextView
                android:id="@+id/cvFecha"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="textEnd"
                android:textColor="#ced0d2"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:text="fecha " />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>