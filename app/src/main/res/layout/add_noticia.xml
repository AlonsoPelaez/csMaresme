<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3276">

    <Button
        android:id="@+id/subirButtonNoticia"
        android:layout_width="139dp"
        android:layout_height="46dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/boton_redondo_principal"
        android:text="Agregar Noticia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addNoticiaTitulo"
        android:layout_width="361dp"
        android:layout_height="101dp"
        android:layout_marginTop="136dp"
        android:padding="5dp"
        android:background="@drawable/boton_redondo_principal"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addNoticiaContenido"
        android:layout_width="361dp"
        android:layout_height="101dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/boton_redondo_principal"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNoticiaTitulo" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo de la noticia"
        app:layout_constraintBottom_toTopOf="@+id/addNoticiaTitulo"
        app:layout_constraintStart_toStartOf="@+id/addNoticiaTitulo" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contenido de la noticia"
        app:layout_constraintBottom_toTopOf="@+id/addNoticiaContenido"
        app:layout_constraintStart_toStartOf="@+id/addNoticiaContenido" />

    <Button
        android:id="@+id/subirFotoAddNoticia"
        android:layout_width="139dp"
        android:layout_height="46dp"
        android:background="@drawable/boton_redondo_principal"
        android:text="Elegir foto"
        app:layout_constraintBottom_toTopOf="@+id/subirButtonNoticia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNoticiaContenido"
        app:layout_constraintVertical_bias="0.476" />

    <ProgressBar
        android:id="@+id/progressBarAddNoticia"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="151dp"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/subirFotoAddNoticia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/checkId"
        android:layout_width="35dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.747"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.644"
        app:srcCompat="@drawable/ic_baseline_check_24" />

</androidx.constraintlayout.widget.ConstraintLayout>